<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SystemeHotel</title>

    <!-- Template CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/responsive.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/jquery.mCustomScrollbar.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css" />
</head>

<body>

<!-- ================= HEADER ================= -->
<header>
    <div class="header">
        <div class="container">
            <div class="row">

                <!-- LOGO -->
                <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 logo_section">
                    <div class="logo">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="~/images/logo.png" alt="Logo" asp-append-version="true" />
                        </a>
                    </div>
                </div>

                <!-- NAVBAR -->
                <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9">
                    <nav class="navigation navbar navbar-expand-md navbar-dark">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample04">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarsExample04">
                            <ul class="navbar-nav mr-auto">

                                <!-- HOME & SECTIONS -->
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="banner">Home</a>
                                </li>
                                
                               

                                <!-- CLIENTS → CREATE -->
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Clients" asp-action="Create">Clients</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Chambres" asp-action="Create">Chambres</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Reservations" asp-action="Create">Reservations</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Factures" asp-action="Create">Factures</a>
                                </li>

                                <!-- MENU GESTION (AUTHENTIFIÉ) -->
                                @if (User?.Identity?.IsAuthenticated == true)
                                {
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                            Gestion
                                        </a>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" asp-controller="Reservations" asp-action="Index">Réservations</a>
                                            <a class="dropdown-item" asp-controller="Chambres" asp-action="Index">Chambres</a>
                                            <a class="dropdown-item" asp-controller="Clients" asp-action="Index">Clients</a>
                                            <a class="dropdown-item" asp-controller="Factures" asp-action="Index">Factures</a>
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" asp-controller="Reservations" asp-action="Search">Réserver une chambre</a>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </nav>
                </div>

            </div>
        </div>
    </div>
</header>

<!-- ================= BODY ================= -->
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<!-- ================= FOOTER ================= -->
<footer>
    <div class="footer">
        <div class="container">
            <p class="text-center">© SystemeHotel - 2025</p>
        </div>
    </div>
</footer>

<!-- ================= SCRIPTS ================= -->
<script src="~/js/jquery.min.js" asp-append-version="true"></script>
<script src="~/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
<script src="~/js/jquery.mCustomScrollbar.concat.min.js" asp-append-version="true"></script>
<script src="~/js/custom.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
