using Microsoft.AspNetCore.Mvc;
using SystemeHotel.Models;
using Microsoft.AspNetCore.Hosting;
using System.IO;

namespace SystemeHotel.Controllers
{
    public class HomeController : Controller
    {
        private readonly HotelDbContext _context;
        private readonly IWebHostEnvironment _env;

        public HomeController(HotelDbContext context, IWebHostEnvironment env)
        {
            _context = context;
            _env = env;
        }

        public IActionResult Index()
        {
            // Workaround: servir directement le fichier HTML si la vue Razor ne se résout pas
            var viewPath = Path.Combine(_env.ContentRootPath, "Views", "Home", "Index.cshtml");
            if (System.IO.File.Exists(viewPath))
            {
                var html = System.IO.File.ReadAllText(viewPath);
                return Content(html, "text/html");
            }

            // Fallback: utiliser la résolution de vue Razor
            return View("~/Views/Home/Index.cshtml");
        }
        public IActionResult about()
        {
            // Workaround: servir directement le fichier HTML si la vue Razor ne se résout pas
            var viewPath = Path.Combine(_env.ContentRootPath, "Views", "Home", "about.cshtml");
            if (System.IO.File.Exists(viewPath))
            {
                var html = System.IO.File.ReadAllText(viewPath);
                return Content(html, "text/html");
            }

            // Fallback: utiliser la résolution de vue Razor
            return View("~/Views/Home/about.cshtml");
        }
    }
}
